<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>{{title}}</title>
  <style>
    body { font-family: system-ui, -apple-system, Arial; margin:24px; }
    h1 { margin: 0 0 8px 0; }
    .kpi { display:flex; gap:16px; margin:16px 0; }
    .kpi div { padding:12px 16px; border:1px solid #eee; border-radius:8px; }
    table { width:100%; border-collapse: collapse; margin-top:16px;}
    th, td { border:1px solid #eee; padding:8px; text-align:left;}
  </style>
</head>
<body>
  <h1>{{title}}</h1>
  <div class="kpi">
    <div><b>Total Checkups:</b> {{kpis.total_checkups}}</div>
    <div><b>Avg HR:</b> {{kpis.heart_rate_avg}}</div>
    <div><b>Avg BP:</b> {{kpis.bp_sys_avg}} / {{kpis.bp_dia_avg}}</div>
    <div><b>Avg Temp (°C):</b> {{kpis.temp_avg_c}}</div>
  </div>

  <h3>Time Series ({{bucket}})</h3>
  <table>
    <thead><tr><th>Bucket</th><th>Avg HR</th><th>Avg BP</th><th>Avg Temp (°C)</th><th>Count</th></tr></thead>
    <tbody>
      {{#each series}}
        <tr>
          <td>{{this._id}}</td>
          <td>{{this.heart_rate_avg}}</td>
          <td>{{this.bp_sys_avg}} / {{this.bp_dia_avg}}</td>
          <td>{{this.temp_avg_c}}</td>
          <td>{{this.count}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</body>
</html>
